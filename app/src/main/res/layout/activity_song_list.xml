<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SongListActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_song_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffffff"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_song_list"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

                <ImageView
                    android:id="@+id/iv_song_list_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_login"
                    />

                <TextView
                    android:id="@+id/tv_song_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/rl_song_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv_song_list_album"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    app:riv_corner_radius="10dp" />

                <TextView
                    android:id="@+id/tv_song_list_album_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/riv_song_list_album"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/riv_song_list_album"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_song_list_creator"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@id/riv_song_list_album"
                    android:layout_alignLeft="@id/tv_song_list_album_name"
                    android:layout_below="@id/tv_song_list_album_name"
                    android:layout_toRightOf="@id/riv_song_list_album"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_song_list_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/riv_song_list_album"
                    android:layout_below="@id/tv_song_list_album_name"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/civ_song_list_creator"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </RelativeLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_song_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/bmb_song_list"
        app:layout_constraintTop_toBottomOf="@+id/abl_song_list">

    </android.support.v7.widget.RecyclerView>

    <com.jayboat.music.ui.view.BottomMusicBar
        android:id="@+id/bmb_song_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcffffff"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.jayboat.music.ui.view.BottomMusicBar>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35273367" />

</android.support.constraint.ConstraintLayout>