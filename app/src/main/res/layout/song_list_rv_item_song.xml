<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_song_list_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/tv_song_list_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/main_word"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_song_list_num"
        android:layout_toLeftOf="@id/iv_song_list_more"
        />

    <TextView
        android:id="@+id/tv_song_list_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/tv_song_list_num"
        android:layout_toLeftOf="@id/iv_song_list_more"
        android:layout_below="@id/tv_song_list_song_name"
        android:layout_marginTop="7dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/iv_song_list_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/song_list_ic_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weak1"
        android:layout_toRightOf="@id/tv_song_list_num"
        android:layout_below="@id/tv_song_list_num"/>

</RelativeLayout>