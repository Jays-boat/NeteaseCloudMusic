<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_albumList_album_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        app:riv_corner_radius="5dp"
        />

    <TextView
        android:id="@+id/tv_albumList_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_albumList_album_picture"
        android:textSize="18sp"
        android:textColor="@color/main_word"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_albumList_album_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@id/tv_albumList_album_name"
        android:layout_alignLeft="@id/tv_albumList_album_name"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66999999"
        android:layout_alignLeft="@id/tv_albumList_album_name"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_albumList_album_num"/>
</RelativeLayout>