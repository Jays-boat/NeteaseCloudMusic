<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_song_list_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/tv_song_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not You"
        android:textSize="20sp"
        android:textColor="@color/main_word"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_song_list_num"
        />

    <TextView
        android:id="@+id/tv_song_list_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matt Terry - Trouble"
        android:layout_toRightOf="@+id/tv_song_list_num"
        android:layout_below="@id/tv_song_list_name"
        android:layout_marginTop="2dp"/>

</RelativeLayout>