<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/imRed"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back_login"
        app:title="手机号登录"
        app:titleTextColor="#fff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/weak1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">

        <TextView
            android:id="@+id/hint_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:drawableStart="@drawable/ic_phone_login_phone"
            android:drawablePadding="16dp"
            android:textColor="@color/imBlack"
            android:textSize="20sp"
            android:text="+86"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/hint_phone"
            android:textSize="20sp"
            android:singleLine="true"
            android:inputType="phone"
            android:textCursorDrawable="@drawable/cursor_login_phone"
            android:hint="请输入手机号"
            android:textColorHint="@color/weak3"
            android:background="@color/weak1"/>

        <View
            android:id="@+id/line_phone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/hint_phone"
            android:background="@color/normal5"/>

        <TextView
            android:id="@+id/hint_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/line_phone"
            android:drawableStart="@drawable/ic_lock_login_phone"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/line_phone"
            android:layout_toEndOf="@+id/hint_lock"
            android:layout_toStartOf="@+id/btn_forget_pwd"
            android:textSize="20sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_login_phone"
            android:hint="请输入密码"
            android:textColorHint="@color/weak3"
            android:background="@color/weak1"/>

        <TextView
            android:id="@+id/btn_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/line_phone"
            android:layout_alignParentEnd="true"
            android:textColor="@color/imBlue"
            android:textSize="15sp"
            android:text="忘记密码？"/>

        <View
            android:id="@+id/line_lock"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/hint_lock"
            android:background="@color/normal5"/>

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_lock"
            android:layout_marginTop="32dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="20sp"
            android:text="登录"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/bg_shape_btn_login_phone"/>

        <ProgressBar
            android:id="@+id/progressbar_login_phone"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_login"/>

    </RelativeLayout>

    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/weak2"
        android:visibility="gone"/>

</RelativeLayout>
