<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/AlbumList_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/album_list_local"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/AlbumList_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地音乐"
        android:textColor="@color/main_word"
        android:textSize="18dp"
        android:layout_toRightOf="@id/AlbumList_icon"
        android:layout_centerVertical="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33999999"
        android:layout_toRightOf="@id/AlbumList_icon"
        android:layout_alignBottom="@id/AlbumList_icon"/>

</RelativeLayout>