<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFF0F1">

    <ImageView
        android:id="@+id/iv_albumList_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/album_list_hide_arrow"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tv_albumList_word_songList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="我创建的歌单"
        android:layout_toRightOf="@+id/iv_albumList_arrow"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/iv_albumList_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_setting_tabs"
        android:layout_alignParentRight="true"
        android:padding="8dp"/>
</RelativeLayout>